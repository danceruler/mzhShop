                        <div class="layui-input-inline">
                            <input type="number" name="shopprice" lay-verify="required" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">原价</label>
                        <div class="layui-input-inline">
